<%# ... %>
<div id="photos" class="row">
  <% @photos.each do |photo| %>
    <div class="col-md-4 mb-4">
      <div class="card">
        <% if photo.image.attached? %>
          <%= image_tag photo.image.variant(resize_to_limit: [300, 300]), class: "card-img-top" %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= photo.title %></h5>
          <%= link_to "Voir", photo, class: "btn btn-sm btn-info" %>
        </div>
      </div>
    </div>
  <% end %>
</div>